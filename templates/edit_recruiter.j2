<head>
	<title>Edit Recruiter</title>
    <link href="../static/style.css" rel="stylesheet" type="text/css" />
</head>

<body>

    <div id='edit'>
        <!-- form to UPDATE a Recruiter -->
        <form id="editRecruiter" action="/edit-recruiter/{{data[0].recruiterID}}" method="post">
            <legend><strong>Update Recruiter</strong></legend>
            <fieldset>
                <label>ID: <span>{{data[0].recruiterID}}</span></label>
                <label for="name">Name</label> 
                <input 
                    type="text" 
                    class="form-control"
                    id="name" name="name" 
                    value="{{ data[0].name }}"
                    pattern="^[A-Z][a-z]+\s[A-Z][a-z]+$"
                    maxlength="50" 
                    required
                />
                <label for="email">Email</label> 
                <input 
                    type="email" 
                    class="form-control"
                    id="name" name="email" 
                    value="{{ data[0].email }}"
                    maxlength="50"
                />
                <label for="phone">Phone</label> 
                <input 
                    type="text" 
                    class="form-control"
                    id="phone" name="phone" 
                    value="{{ data[0].phone }}"
                    pattern="^[0-9]{3}[-][0-9]{3}[-][0-9]{4}$"
                />
                <label for="linkedin">LinkedIn</label> 
                <input 
                    type="text" 
                    class="form-control"
                    id="linkedin" name="linkedin" 
                    value="{{ data[0].linkedin }}"
                    maxlength="100"
                />
                <label for="lastContacted">Last Contacted</label> 
                <input 
                    type="date" 
                    class="form-control"
                    id="lastContacted" name="lastContacted" 
                    value="{{ data[0].lastContacted }}"
                />
                <label for="details">Details</label> 
                <input 
                    type="text" 
                    class="form-control"
                    id="details" name="details" 
                    value="{{ data[0].details }}"
                    maxlength="500"
                />
            </fieldset>
            <input 
                type="submit" 
                value="Update Recruiter"
                name="Update_Recruiter"
                class="btn btn-primary" 
                style="margin:.5rem;"
            />
            <a class="btn-anchor" href='/positionscompanyrecruiters'>
                <input class="btn" type="button" value="Cancel">
            </a>
        </form>
    </div>

</body>
</html>