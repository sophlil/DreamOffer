<head>
	<title>Edit Application</title>
    <link href="../static/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="header">
        <h1>Applications</h1>
        <div class="navbar">
            <a href="/">Home</a> |
            <a href="/applicants">Applicants</a> |
            <a href="/applications">Applications</a> |
            <a href="/companies">Companies</a> |
            <a href="/positionscompanyrecruiters">Positions & Company Recruiters</a>
        </div>
    </div>

    <!-- EDIT --> 
    <div id='edit'>
        <h3>Update Application</h3>
        <!-- form to UPDATE an Application -->
        <form id="editApplication" action="/edit-application/{{data[0].applicationID}}" method="post">
            <fieldset>
                <div class="form-head">
                    <label>ID: <span>{{data[0].applicationID}}</span></label>
                </div>
                <label for="dateApplied">Date Applied:</label>
                <input 
                    type="date" 
                    class="form-control" 
                    id="dateApplied" 
                    name="dateApplied" 
                    value="{{data[0].dateApplied}}"
                    required
                />

                <label for="results">Result:</label>
                <select class="form-control" name="result" id="result" required>
                    {% for key in applicationResults.keys() %}
                        {% if data[0].result == key %}
                            <option value="{{ key }}" selected>{{applicationResults[key]}}</option>
                        {% else %}
                            <option value="{{ key }}">{{applicationResults[key]}}</option>
                        {% endif %}
                    {% endfor %}
                </select>

                <label for="dateResult">Result Date:</label> 
                <input 
                    type="date" 
                    class="form-control" 
                    id="dateResult" 
                    name="dateResult" 
                    value="{{data[0].dateResult}}"
                />
                <div class="wrapper">
                    <input 
                        type="submit" 
                        value="Update Application"
                        name="Update_Application"
                        class="btn new-btn" 
                        style="margin:.5rem;"
                    />
                    <a class="btn-anchor" href='/applications'>
                        <input class="btn" type="button" value="Cancel">
                    </a>
                </div>
            </fieldset>
        </form>
    </div>
    <!-- END EDIT -->

</body>
</html>