<head>
	<title>Delete Recruiter</title>
    <link href="../static/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="header">
        <h1>Company Recruiters</h1>
        <div class="navbar">
            <a href="/">Home</a> |
            <a href="/applicants">Applicants</a> |
            <a href="/applications">Applications</a> |
            <a href="/companies">Companies</a> |
            <a href="/positionscompanyrecruiters">Positions & Company Recruiters</a>
        </div>
    </div>

    <!-- DELETE -->
    <div id='delete'>
        <h3 class="delete-header">Delete Recruiter</h3>
        <!-- form for performing DELETE on a Recruiter -->
        <form id="deleteRecruiter" action="/delete-recruiter/{{data[0].recruiterID}}" method="post">
            <fieldset>
                <div class="form-head">
                    <p>Are you sure you want to delete this recruiter?</p>
                </div>
                <div>
                <label><strong>ID: </strong><span>{{data[0].recruiterID}}</span></label>
                <label><strong>Name: </strong><span>{{data[0].name}}</span></label>
                </div>
                <div class="wrapper">
                    <input 
                        type="submit" 
                        value="Delete Recruiter" 
                        name="Delete_Recruiter" 
                        class="btn btn-primary" 
                        style="margin:.5rem;"
                    />
                    <a class="btn-anchor" href='/positionscompanyrecruiters'>
                        <input class="btn" type="button" value="Cancel">
                    </a>
                </div>
            </fieldset>
        </form>
    </div>
    <!-- END DELETE -->

</body>
</html>