<html>
<head>
	<title>Search Applications</title>
    <link href="../static/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="header">
        <h1>Applications</h1>
        <div class="navbar">
            <a href="/">Home</a> |
            <a href="/applicants">Applicants</a> |
            <a href="/applications">Applications</a> |
            <a href="/companies">Companies</a> |
            <a href="/positionscompanyrecruiters">Positions & Company Recruiters</a>
        </div>
    </div>

<!-- BROWSE -->
    <div id='searchApplication'>
        <h3>Applications Search Results</h3>
        <table class="table-class">
        <!-- Access data passed from app.py -->
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date Applied</th>
                    <th>Result</th>
                    <th>Result Date</th>
                    <th>Applicant</th>
                    <th>Position</th>
                </tr>
            </thead>


            <tbody>
            <!-- Iterate through every item in data -->
            {% for item in search_data %}
                <tr>
                {% for key in item.keys() %}
                    {% if key == 'result' %}
                        {% if item[key] == 0 %}
                            <td>Submitted</td>
                        {% elif item[key] == 1 %}
                            <td>In Process</td>
                        {% elif item[key] == 2 %}
                            <td>Offer</td>
                        {% elif item[key] == 3 %}
                            <td>Rejection</td>
                        {% endif %}
                    {% else %}
                        <!-- Create a <td> element with the value of that key in it -->
                        <td> {{item[key]}} </td> 
                    {% endif %}
                {% endfor %}
                </tr>
            {% endfor %}
            </tbody>

        </table>
        <p>&nbsp;</p>

        <!-- Return to All Applications Button -->
        <a class="btn-anchor" href='/applications'>
                <input class="btn" type="button" value="Return to All Applications">
            </a>
    </div>
    <!-- END BROWSE -->

</body>
</html>