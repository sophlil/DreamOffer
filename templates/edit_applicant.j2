<head>
	<title>Edit Applicant</title>
    <link href="../static/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="header">
        <h1>Applicants</h1>
        <div class="navbar">
            <a href="/">Home</a> |
            <a href="/applicants">Applicants</a> |
            <a href="/applications">Applications</a> |
            <a href="/companies">Companies</a> |
            <a href="/positionscompanyrecruiters">Positions & Company Recruiters</a>
        </div>
    </div>

    <!-- EDIT --> 
    <div id='edit'>
        <h3>Update Applicant</h3>
        <!-- form to UPDATE an Applicant -->
        <form id="editApplicant" action="/edit-applicant/{{data[0].applicantID}}" method="post">
            <fieldset>
                <div class="form-head">
                    <label>ID: <span>{{data[0].applicantID}}</span></label>
                </div>
                <label for="name">Name</label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="name" 
                    name="name" 
                    value="{{data[0].name}}"
                    pattern="^[A-Z][a-z]+\s[A-Z][A-Za-z]+$"
                    required
                />
                <label for="email">Email</label> 
                <input 
                    type="email" 
                    class="form-control" 
                    id="email" 
                    name="email" 
                    value="{{data[0].email}}"
                    required
                />
                <div class="wrapper">
                    <input 
                        type="submit" 
                        value="Update Applicant"
                        name="Update_Applicant"
                        class="btn btn-primary" 
                        style="margin:.5rem;"
                    />
                    <a class="btn-anchor" href='/applicants'>
                        <input class="btn" type="button" value="Cancel">
                    </a>
                </div>
            </fieldset>
        </form>
    </div>
    <!-- END EDIT -->

</body>
</html>