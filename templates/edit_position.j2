<head>
	<title>Edit Position</title>
    <link href="../static/style.css" rel="stylesheet" type="text/css" />
</head>

<body>

    <div id='edit'>
        <!-- form to UPDATE a Position -->
        <form id="editPosition" action="/edit-position/{{data[0].positionID}}" method="post">
            <legend><strong>Update Position</strong></legend>
            <fieldset>
                <label>ID: <span>{{data[0].positionID}}</span></label>
                <label for="company">Company Name</label>
                <select class="form-control" name="company" id="company" required>
                {% for company in companies_data %}
                    {% if data[0].companyID == company['companyID'] %}
                        <option value="{{ company['companyID'] }}" selected> {{ company['name'] }} </option>
                    {% else %}
                        <option value="{{ company['companyID'] }}"> {{ company['name'] }}</option>
                    {% endif %}
                {% endfor %}
                </select>
                <label for="title">Title</label> 
                <input 
                    type="text" 
                    class="form-control"
                    id="title" name="title" 
                    value="{{data[0].title}}"
                    maxlength="100"
                    required
                />
                <label for="location">Location</label> 
                <input 
                    type="text" 
                    class="form-control"
                    id="location" name="location" 
                    value="{{data[0].location}}"
                    maxlength="100"
                />
                <label for="salary">Salary</label> 
                <input 
                    type="text" 
                    class="form-control"
                    id="salary" name="salary" 
                    value="{{data[0].salary}}"
                />
                <label for="link">Link</label> 
                <input 
                    type="text" 
                    class="form-control"
                    id="link" name="link" 
                    value="{{data[0].link}}"
                    maxlength="100"
                    required
                />
            </fieldset>
            <input 
                type="submit" 
                value="Update Position"
                name="Update_Position"
                class="btn btn-primary" 
                style="margin:.5rem;"
            />
            <a href='/positionscompanyrecruiters'>
                <input class="btn" type="button" value="Cancel">
            </a>
        </form>
    </div>

</body>
</html>