<head>
	<title>Delete Position and Recruiter Affiliation</title>
    <link href="../static/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="header">
        <h1>Positions & Company Recruiters</h1>
    </div>

    <a href="/">Home</a> |
    <a href="/applicants">Applicants</a> |
    <a href="/applications">Applications</a> |
    <a href="/companies">Companies</a> |
    <a href="/positionscompanyrecruiters">Positions & Company Recruiters</a>

    <div id='delete'>
        <h3 class="delete-header">Delete Position & Recruiter Affiliation</h3>
        <!-- form for performing DELETE on a Position and Recruiter Affiliation -->
        <form id="deleteAffiliation" action="/delete-affiliation/{{data[0].positionsCompanyRecruitersID}}" method="post">
            <fieldset>
                <div class="form-head">
                    <p>Are you sure you want to delete the position and recruiter affiliation?</p>
                </div>
                <label><strong>ID: </strong><span>{{data[0].positionID}}</span></label>
                <label><strong>Title: </strong><span>{{data[0].title}}</span></label>
                <label><strong>ID: </strong><span>{{data[0].recruiterID}}</span></label>
                <label><strong>Name: </strong><span>{{data[0].name}}</span></label>
                <div class="wrapper">
                    <input 
                        type="submit" 
                        value="Delete Affiliation" 
                        name="Delete_Affiliation" 
                        class="btn btn-primary" 
                        style="margin:.5rem;"
                    />
                    <a class="btn-anchor" href='/positionscompanyrecruiters'>
                        <input class="btn" type="button" value="Cancel">
                    </a>
                </div>
            </fieldset>
        </form>
    </div>

</body>
</html>