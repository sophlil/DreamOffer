<!-- Adapted from the companies_crud.html UI design -->
<head>
    <title>Companies</title>
    <link rel="stylesheet" href="../static/style.css" type="text/css">
    <script language="JavaScript" defer>
        function showForm(form) {
            if (form == 'insert') {
                document.getElementById('browse').style.display = 'none';
                document.getElementById('insert').style.display = 'block';
            } else { // display browse by default
                document.getElementById('browse').style.display = 'block';
                document.getElementById('insert').style.display = 'none';
            }
        }

        function newCompany() {
            showForm('insert');
        }

        function browseCompanies() {
            showForm('browse');
        }

        window.addEventListener('load', () => {
            showForm('browse');
        });
    </script>
</head>

<body>
    <div class="header">
        <h1>Companies</h1>
    </div>

    <a href="/">Home</a> |
    <a href="/applicants">Applicants</a> |
    <a href="/applications">Applications</a> |
    <a href="/companies">Companies</a> |
    <a href="/positionscompanyrecruiters">Positions & Company Recruiters</a>

    <!-- BROWSE -->
    <div id='browse'>
        <h3>Browse Companies</h3>
        <table class="table-class">
        <!-- Access data passed from app.py -->
            <thead>
                <tr>
                    <th colspan="2">
                        <button class="new-btn" onClick="newCompany()">New Company</button>
                    </th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Website</th>
                </tr>
            </thead>

            {% if data %}
            <tbody>
            <!-- Iterate through every item in data -->
            {% for item in data %}
                <tr>
                    <!-- Edit and Delete buttons for each item -->
                    <td>
                        <a href="/edit-company/{{item.companyID}}" class="edit-btn">
                            Edit
                        </a>
                    </td>
                    <td>
                        <a href="/delete-company/{{item.companyID}}" class="delete-btn">
                            Delete
                        </a>
                    </td>
                {% for key in item.keys() %}

                    <!-- Create a <td> element with the value of that key in it -->
                    {% if key == 'website' %}
                        <td><a href="{{item[key]}}"> {{item[key]}}</a> </td>
                    {% else %}
                    <td> {{item[key]}} </td> 
                    {% endif %}
                {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        {% endif %}

        </table>
        <p>&nbsp;</p>
    </div>
    <!-- END BROWSE -->

    <!-- INSERT -->
    <div id='insert'>
        <!-- form to INSERT new Company into Companies entity -->
        <form id="insertCompany" action="/companies" method="post">
            <fieldset>
                <h3><strong>Add Company</strong></h3>
                <!-- placeholder shows ghost text, required forces an input, pattern forces input adherance -->
                <label for="company">Company: </label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="company" name="company"
                    placeholder="Google" 
                    required
                />

                <label for="website">Website: </label>
                <input 
                    type="url" 
                    class="form-control" 
                    id="website" name="website"
                    placeholder="https://www.google.com" 
                />

                <label for="description">Description: </label> 
                <input 
                    type="text" 
                    class="form-control"
                    id="description" name="description" 
                    placeholder=""
                    maxlength="255" 
                />
                <div class="wrapper">
                    <!-- Create 'Add Company' and 'Cancel' buttons -->
                    <input type="submit" value="Add Company" name="Add_Company" class="btn btn-primary" style="margin:.5rem;">
                    <a class="btn-anchor" href='/companies'>
                        <input class="btn" type="button" value="Cancel">
                    </a>
                </div>
            </fieldset>
        </form>
    </div>
    <!-- END INSERT -->

</body>
</html>