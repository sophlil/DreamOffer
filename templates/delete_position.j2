<head>
	<title>Delete Position</title>
    <link href="../static/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="header">
        <h1>Positions</h1>
        <div class="navbar">
            <a href="/">Home</a> |
            <a href="/applicants">Applicants</a> |
            <a href="/applications">Applications</a> |
            <a href="/companies">Companies</a> |
            <a href="/positionscompanyrecruiters">Positions & Company Recruiters</a>
        </div>
    </div>

    <!-- DELETE -->
    <div id='delete'>
        <h3 class="delete-header">Delete Position</h3>
        <!-- form for performing DELETE on a Position -->
        <form id="deletePosition" action="/delete-position/{{data[0].positionID}}" method="post">
            <fieldset>
                <div class="form-head">
                    <p>Are you sure you want to delete this position?</p>
                </div>
                <div>
                <label><strong>ID: </strong><span>{{data[0].positionID}}</span></label>
                <label><strong>Title: </strong><span>{{data[0].title}}</span></label>
                </div>
                <div class="wrapper">
                    <input 
                        type="submit" 
                        value="Delete Position" 
                        name="Delete_Position" 
                        class="btn btn-primary" 
                        style="margin:.5rem;"
                    />
                    <a class="btn-anchor" href='/positionscompanyrecruiters'>
                        <input class="btn" type="button" value="Cancel">
                    </a>
                </div>
            </fieldset>
        </form>
    </div>
    <!-- END DELETE -->

</body>
</html>