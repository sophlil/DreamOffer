<head>
	<title>Edit Company</title>
    <link href="../static/style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="header">
        <h1>Companies</h1>
        <div class="navbar">
            <a href="/">Home</a> |
            <a href="/applicants">Applicants</a> |
            <a href="/applications">Applications</a> |
            <a href="/companies">Companies</a> |
            <a href="/positionscompanyrecruiters">Positions & Company Recruiters</a>
        </div>
    </div>

    <!-- EDIT --> 
    <div id='edit'>
        <h3>Update Company</h3>
        <!-- form to UPDATE a Company -->
        <form id="editCompany" action="/edit-company/{{data[0].companyID}}" method="post">
            <fieldset>
                <div class="form-head">
                    <label>ID: <span>{{data[0].companyID}}</span></label>
                </div>
                <label for="company">Company</label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="company" 
                    name="company" 
                    value="{{data[0].name}}"
                    required
                />
                <label for="website">Website</label> 
                <input 
                    type="url" 
                    class="form-control" 
                    id="website" 
                    name="website" 
                    value="{{data[0].website}}"
                    pattern="(https?:\/\/(?:www\.|(?!www))[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\.[^\s]{2,}|www\.[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\.[^\s]{2,}|https?:\/\/(?:www\.|(?!www))[a-zA-Z0-9]+\.[^\s]{2,}|www\.[a-zA-Z0-9]+\.[^\s]{2,})"
                />
                <label for="description">Description</label> 
                <input 
                    type="text" 
                    class="form-control"
                    id="description" 
                    name="description" 
                    value="{{data[0].description}}"
                    maxlength="255" 
                />
                <div class="wrapper">
                    <input 
                        type="submit" 
                        value="Update Company"
                        name="Update_Company"
                        class="btn btn-primary" 
                        style="margin:.5rem;"
                    />
                    <a class="btn-anchor" href='/companies'>
                        <input class="btn" type="button" value="Cancel">
                    </a>
                </div>
            </fieldset>
        </form>
    </div>
    <!-- END EDIT -->


</body>
</html>